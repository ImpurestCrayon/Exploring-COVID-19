#Libaries
import os
import glob
import pandas as pd
import numpy as np
import csv

#Set Variables and map to Folder
filepath = "C:/Users/User/Documents/Python Scripts/Data/GDELT"
extension = 'csv'
os.chdir(filepath)
all_filenames = [i for i in glob.glob('*.{}'.format(extension))]

#combine all files in the list
combined_csv = pd.concat([pd.read_csv(f, header=None, delimiter="\t") for f in all_filenames])





